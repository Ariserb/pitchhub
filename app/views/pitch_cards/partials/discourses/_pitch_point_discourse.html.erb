<% css_point = point[:name].downcase.tr(' ', '-')%>
<% image_point = point[:name].downcase.tr(' ', '_')%>
<% image_selected = 'points/selected/'+image_point+'.png'%>
<% can_see_author = can? :see_author, discourse %>
<% author = can_see_author ? discourse.author_name : "Anonymous" %>
<% verb = discourse.class.name == "Comment" ? "commented" : "suggested"%>

<div class="col-md-10 col-md-offset-1">
  <div id="<%= css_point %>-discourse-content" class="block block-bordered pitch-card row">
	<!-- Discourse -->
	<li class="media">
	  <div class="pull-left">
		<%= image_tag_with_at2x image_selected, :class =>  "pitch-point-image-restrained" %>
	  </div>
	  <div class="media-body">
		<p class="push-bit">
		<span class="text-muted pull-right">
			<small><abbr class="timeago" title="<%= discourse.created_at.to_time.iso8601 %>"></abbr></small>
			<span class="text-danger" data-toggle="tooltip" title="From Web">
			  <i class="fa fa-globe"></i>
			</span>
		</span>
		  <strong><%= author + " " + verb%></strong>
		</p>
		<% if discourse.has_attribute?(:content) %>
			<%= text_area_tag css_point+"-textarea-input", discourse.content, class: "form-horizontal form-control-borderless form-pitch-point", placeholder: point[:placeholder], disabled: :true %>
		<% end %>
		<hr/>
		<p><%= discourse.comment %></p>
		<!--<p>-->
		<!--<a href="javascript:void(0)" class="btn btn-xs btn-success"><i class="fa fa-thumbs-up"></i> You Like it</a>-->
		<!--<a href="javascript:void(0)" class="btn btn-xs btn-default"><i class="fa fa-share-square-o"></i> Share</a>-->
		<!--</p>-->
	  </div>
	</li>
	<!-- END Discourse -->
  </div>
</div>